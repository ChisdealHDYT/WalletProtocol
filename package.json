{
  "name": "stakecubeprotocol",
  "productName": "SCP Wallet",
  "version": "1.1.0",
  "description": "The StakeCube Protocol full-node and GUI for Node.js",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "StakeCube",
  "license": "MPL-2.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^8.0.3",
    "electron-reloader": "^1.2.0"
  },
  "dependencies": {
    "bitcoin-rpc-promise": "^2.1.6",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "jquery": "^3.6.0",
    "otplib": "^12.0.1",
    "regedit": "^3.0.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "public/sc-logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "setupExe": "SCP Installer.exe",
            "loadingGif": "public/spinner.gif",
            "iconUrl": "https://raw.githubusercontent.com/stakecube/StakeCubeProtocol/main/public/sc-logo.ico",
            "setupIcon": "public/sc-logo.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
